<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rjeya.acalculator.MainActivity"
    android:background="#FFAAAAAA">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:background="#FF133445"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:columnCount="1"
        android:rowCount="2"
        android:id="@+id/stckDisplay">
        <com.rjeya.acalculator.AutoResizeTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:lines="1"
            android:gravity="end"
            android:textColor="#FFFFFFFF"
            android:layout_rowWeight="2"
            android:id="@+id/lblOperationHistory"/>
        <com.rjeya.acalculator.AutoResizeTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="70sp"
            android:minHeight="5sp"
            android:lines="1"
            android:gravity="end"
            android:textColor="#FFFFFFFF"
            android:layout_rowWeight="3"
            android:id="@+id/lblNumberPrinter"/>

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_below="@id/stckDisplay"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:columnCount="4"
        android:rowCount="5">
        <Button
            android:text="CE"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF532E3B"
            android:id="@+id/btnCE"
            android:onClick="btnCE_Click"/>
        <Button
            android:text="C"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF532E3B"
            android:id="@+id/btnC"
            android:onClick="btnC_Click"/>
        <Button
            android:text="@string/btn_del"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF532E3B"
            android:id="@+id/btnDel"
            android:onClick="btnErase_Click"/>
        <Button
            android:text="÷"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF225268"
            android:id="@+id/btnDivide"
            android:onClick="btnDivide_Click"/>

        <Button
            android:text="7"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF333333"
            android:id="@+id/btn7"
            android:onClick="btn7_Click"/>
        <Button
            android:text="8"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF333333"
            android:id="@+id/btn8"
            android:onClick="btn8_Click"/>
        <Button
            android:text="9"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF333333"
            android:id="@+id/btn9"
            android:onClick="btn9_Click"/>
        <Button
            android:text="×"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF225268"
            android:id="@+id/btnMultiply"
            android:onClick="btnMultiply_Click"/>

        <Button
            android:text="4"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF333333"
            android:id="@+id/btn4"
            android:onClick="btn4_Click"/>
        <Button
            android:text="5"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF333333"
            android:id="@+id/btn5"
            android:onClick="btn5_Click"/>
        <Button
            android:text="6"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF333333"
            android:id="@+id/btn6"
            android:onClick="btn6_Click"/>
        <Button
            android:text="+"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF225268"
            android:id="@+id/btnAdd"
            android:onClick="btnAdd_Click"/>

        <Button
            android:text="1"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF333333"
            android:id="@+id/btn1"
            android:onClick="btn1_Click"/>
        <Button
            android:text="2"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF333333"
            android:id="@+id/btn2"
            android:onClick="btn2_Click"/>
        <Button
            android:text="3"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF333333"
            android:id="@+id/btn3"
            android:onClick="btn3_Click"/>
        <Button
            android:text="-"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF225268"
            android:id="@+id/btnSoustract"
            android:onClick="btnSoustract_Click"/>

        <Button
            android:text="±"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF333333"
            android:id="@+id/btnNegate"
            android:onClick="btnNegate_Click"/>
        <Button
            android:text="0"
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF333333"
            android:id="@+id/btn0"
            android:onClick="btn0_Click"/>
        <Button
            android:text=","
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#FFFFFFFF"
            android:background="#FF333333"
            android:id="@+id/btnComma"
            android:onClick="btnComma_Click"/>
        <Button
            android:text="="
            android:textSize="25sp"
            android:textScaleX="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#FF124216"
            android:textColor="#FFFFFFFF"
            android:id="@+id/btnEqual"
            android:onClick="btnEqual_Click"/>


    </GridLayout>
</RelativeLayout>
